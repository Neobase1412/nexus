<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Prompt 搜索視圖 -->
    <record id="view_prompt_search" model="ir.ui.view">
        <field name="name">prompt.prompt.search</field>
        <field name="model">prompt.prompt</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="content"/>
                <field name="tag_ids"/>
                <field name="create_uid"/>
                <separator/>
                <filter string="My Prompts" name="my_prompts" domain="[('create_uid', '=', uid)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Created By" name="create_uid" context="{'group_by': 'create_uid'}"/>
                    <filter string="Creation Date" name="create_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Prompt 列表視圖 -->
    <record id="view_prompt_tree" model="ir.ui.view">
        <field name="name">prompt.prompt.tree</field>
        <field name="model">prompt.prompt</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="usage_amount"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="create_uid" widget="many2one_avatar"/>
                <field name="create_date"/>
                <field name="write_uid" widget="many2one_avatar"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- Prompt 表單視圖 -->
    <record id="view_prompt_form" model="ir.ui.view">
        <field name="name">prompt.prompt.form</field>
        <field name="model">prompt.prompt</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="increment_usage" 
                            string="Increment Usage" 
                            type="object" 
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                   options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="輸入提示詞名稱..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="usage_amount"/>
                        </group>
                        <group>
                            <field name="create_uid" widget="many2one_avatar"/>
                            <field name="create_date"/>
                            <field name="write_uid" widget="many2one_avatar"/>
                            <field name="write_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content" name="content">
                            <field name="content" placeholder="輸入提示詞內容..."/>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="輸入描述..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tag 搜索視圖 -->
    <record id="view_prompt_tag_search" model="ir.ui.view">
        <field name="name">prompt.tag.search</field>
        <field name="model">prompt.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="create_uid"/>
                <group expand="0" string="Group By">
                    <filter string="Created By" name="create_uid" context="{'group_by': 'create_uid'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tag 列表視圖 -->
    <record id="view_prompt_tag_tree" model="ir.ui.view">
        <field name="name">prompt.tag.tree</field>
        <field name="model">prompt.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="prompt_count"/>
                <field name="create_uid" widget="many2one_avatar"/>
                <field name="create_date"/>
                <field name="write_uid" widget="many2one_avatar"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- Tag 表單視圖 -->
    <record id="view_prompt_tag_form" model="ir.ui.view">
        <field name="name">prompt.tag.form</field>
        <field name="model">prompt.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" placeholder="輸入標籤名稱..."/>
                        <field name="color" widget="color_picker"/>
                        <field name="prompt_count"/>
                    </group>
                    <group>
                        <group>
                            <field name="create_uid" widget="many2one_avatar"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="write_uid" widget="many2one_avatar"/>
                            <field name="write_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 動作定義 -->
    <record id="action_prompt_list" model="ir.actions.act_window">
        <field name="name">提示詞庫</field>
        <field name="res_model">prompt.prompt</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_prompts': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                創建您的第一個提示詞！
            </p>
            <p>
                在這裡管理您的AI提示詞庫。
            </p>
        </field>
    </record>

    <record id="action_prompt_tag_list" model="ir.actions.act_window">
        <field name="name">標籤</field>
        <field name="res_model">prompt.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                創建您的第一個標籤！
            </p>
            <p>
                標籤可以幫助您更好地組織提示詞。
            </p>
        </field>
    </record>

    <!-- 選單項目 -->
    <menuitem id="menu_prompt_root" 
              name="提示詞庫" 
              sequence="10"/>

    <menuitem id="menu_prompt_main" 
              name="提示詞"
              parent="menu_prompt_root" 
              action="action_prompt_list"
              sequence="1"/>

    <menuitem id="menu_prompt_tag" 
              name="標籤管理"
              parent="menu_prompt_root" 
              action="action_prompt_tag_list"
              sequence="2"/>
</odoo>