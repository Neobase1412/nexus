<!-- views/task_assignment_views.xml -->
<odoo>
    <!-- 表單視圖 -->
    <record id="view_task_assignment_form" model="ir.ui.view">
        <field name="name">task.assignment.form</field>
        <field name="model">task.assignment</field>
        <field name="arch" type="xml">
            <form string="Task Assignment">
                <sheet>
                    <group>
                        <field name="form_responsible_id" invisible="1"/>
                        <field name="task_type"/>
                        <field name="task_responsible_id"/>
                        <field name="task_executor_ids"/>
                        <field name="project_id"/>
                        <field name="expected_delivery_date"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 列表視圖 -->
    <record id="view_task_assignment_tree" model="ir.ui.view">
        <field name="name">task.assignment.tree</field>
        <field name="model">task.assignment</field>
        <field name="arch" type="xml">
            <tree string="Task Assignments">
                <field name="task_type"/>
                <field name="task_responsible_id"/>
                <field name="expected_delivery_date"/>
                <field name="project_id"/>
            </tree>
        </field>
    </record>
</odoo>
