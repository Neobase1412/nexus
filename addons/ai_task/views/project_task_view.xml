<odoo>
    <record id="view_task_form_ai" model="ir.ui.view">
        <field name="name">project.task.form.view.ai.button</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Add AI Button -->
            <xpath expr="//header" position="inside">
                <button name="action_send_to_ai"
                        type="object"
                        string="Generate AI Response"
                        icon="fa-magic"
                        class="oe_highlight"/>
            </xpath>
            <!-- Add custom fields -->
            <xpath expr="//sheet" position="inside">
                <group string="Task Details">
                    <field name="work_hour"/>
                    <field name="estimate_time"/>
                    <!-- Use star widget for priority -->
                    <field name="priority" widget="priority"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
