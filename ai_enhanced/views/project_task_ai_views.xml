<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_form_ai" model="ir.ui.view">
        <field name="name">project.task.form.ai</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="replace">
                <label class="o_form_label" for="description">Description</label>
                <div class="o_input_with_button" style="display: inline-flex; align-items: center; width: 100%;">
                    <field name="description"/>
                    <button type="object" class="btn btn-primary fa fa-magic ml-2" tabindex="-1" draggable="false" aria-label="AI Generate" data-tooltip="AI Generate" title="Generate AI Description" name="action_generate_ai_description"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
