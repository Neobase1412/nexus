<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_estate_property_form_ai" model="ir.ui.view">
        <field name="name">estate.property.form.ai</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.view_estate_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <field name="ai_generated_description" readonly="1"/>
                    <button name="action_generate_ai_description" type="object" string="AI Generate Description" class="btn-primary"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
